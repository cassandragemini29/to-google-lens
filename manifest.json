{
    "manifest_version": 2,
    "name": "To Google Lens",
    "version": "2.8",
    "permissions": ["menus", "activeTab", "<all_urls>", "storage"],

    "description": "Take a screenshot of a webpage and search on Google Lens.",

    "icons": {
        "32": "32.png",
        "128": "128.png"
    },

    "background": {
        "scripts": ["purify.min.js", "bg.js"]
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": false
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "togooglelens@kabus.ovh",
            "strict_min_version": "42.0"
        }
    }
}
